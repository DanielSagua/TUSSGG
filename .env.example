# =========================
# App
# =========================
NODE_ENV=development
PORT=3000
TZ=America/Santiago

# =========================
# Login (una sola clave)
# Recomendado: usar hash (bcrypt)
# Generar hash:
#   node -e "console.log(require('bcryptjs').hashSync('TU_CLAVE', 12))"
# =========================
APP_PASSWORD_HASH=
# Alternativa (solo desarrollo): clave en texto plano (no recomendado)
APP_PASSWORD=

MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCK_MINUTES=15

# =========================
# Sesión
# =========================
SESSION_SECRET=pon_un_secreto_largo_aqui
SESSION_IDLE_MINUTES=30
SESSION_COOKIE_SECURE=false

# =========================
# SQL Server
# =========================
DB_USER=sa
DB_PASSWORD=TuPassword
DB_SERVER=localhost
DB_DATABASE=TrabajosUrgentesDB
DB_PORT=1433
DB_ENCRYPT=false
DB_TRUST_SERVER_CERT=true

# =========================
# Subida de archivos
# =========================
UPLOAD_MAX_MB=5

# =========================
# Defaults (prefill / auditoría)
# =========================
DEFAULT_CREADO_POR_NOMBRE=Paula Cendegui
DEFAULT_CREADO_POR_CORREO=pcendegui@weg.net

# Uploads
# Recomendado: ruta ABSOLUTA para no perder fotos al actualizar el proyecto
# Windows ejemplo: UPLOADS_DIR=C:\\Daniel\\SSGG_Uploads
UPLOADS_DIR=
# 1 = requiere sesión (default). 0 = público (solo para pruebas)
PROTECT_UPLOADS=1
